<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Arquivo com Abas</title>
  <style>
    /* Definições de estilo para as abas */
    .tab {
      overflow: hidden;
      border: 1px solid #ccc;
      background-color: #f1f1f1;
    }
    .tab button {
      background-color: inherit;
      border: none;
      outline: none;
      cursor: pointer;
      padding: 14px 16px;
      transition: 0.3s;
    }a
    .tab button.active {
      background-color: #ccc;
    }
    .tabcontent {
      display: none;
      padding: 6px 12px;
      border: 1px solid #ccc;
      border-top: none;
    }
    .tab button.active {
      background-color: #ccc;
    }
  </style>
</head>
<body>

<!-- Criação das abas -->
<div class="tab">
  <button class="tablinks" onclick="openTab(event, 'tab1')" id="defaultOpen">Abas 1</button>
  <button class="tablinks" onclick="openTab(event, 'tab2')">Abas 2</button>
  <button class="tablinks" onclick="openTab(event, 'tab3')">Abas 3</button>
</div>

<!-- Conteúdo das abas -->
<div id="tab1" class="tabcontent">
  <h3>Abas 1</h3>
  <p>Conteúdo da Aba 1.</p>
  <%= render partial: 'aba1' %>
</div>

<div id="tab2" class="tabcontent">
  <h3>Abas 2</h3>
  <p>Conteúdo da Aba 2.</p>
  <%= render partial: 'aba2' %>
</div>

<div id="tab3" class="tabcontent">
  <h3>Abas 3</h3>
  <p>Conteúdo da Aba 3.</p>
  <%= render partial: 'aba3' %>  
</div>

<script>
  // Função para abrir a aba atual e fechar as outras abas
  function openTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
  }

  // Define a primeira aba como ativa por padrão
  document.getElementById("defaultOpen").click();
</script>


</body>
</html>
